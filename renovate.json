{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        ":rebaseStalePrs",
        "docker:pinDigests",
        "helpers:pinGitHubActionDigests"
    ],
    "flux": {
        "fileMatch": [
            "\\.yaml$"
        ]
    },
    "packageRules": [
        {
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "automerge": true
        }
    ]
}